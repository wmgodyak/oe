    $time_start = microtime(true);

    if(!defined('DOCROOT')) define('DOCROOT', str_replace("\\", "/", $_SERVER['DOCUMENT_ROOT'] . '/'));
    if(!defined('SYSPATH')) define('SYSPATH', DOCROOT . 'system/');

    // load startup file
    include_once SYSPATH ."bootstrap.php";

    // запуск маршрутизатора
    $router->run();

    // вивід на екран
    \controllers\core\Output::render($time_start);